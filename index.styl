$font-default = Arial, Helvetica, sans-serif
$font-caption = 'Tinos', 'Times New Roman', 'Times', serif

$color = #926953
$color-muted = #6a4d3d
$color-light = #4e392e
$color-inverted = #000

$color-logo = #926953
$color-logo2 = #926953

$text = #926953

$bg = #000
//$bg-hover = #8ce7ed
$bg-hover = #926953

$border = transparent
$border-thin = #4e392e

$nav-link = #926953
$nav-current = #6a4d3d
//$nav-selection = #8ce7ed
$nav-selection = #926953

$link = #926953
//$link-hover = #8ce7ed
$link-hover = #926953

// The micro clearfix http://nicolasgallagher.com/micro-clearfix-hack/
clearfix() {
    &:before,
    &:after {
        content: "";
        display: table;
        border-collapse: collapse;
    }

    &:after {
        clear: both;
    }
}

// =====================================

html {
    height: 100%;
    //background-image: url(img/bg.jpg);
    //background: #f1ede8;
    background-image: url("/img/bg2.jpg");
}

body {
    box-sizing: border-box;
    margin: 0 auto;
    padding: 0 20px 20px;
    max-width: 900px + 2*20px;
    min-width: 700px + 2*20px;
    min-height: 100%;
    border: 1px solid $border;
    border-top: none;
    border-bottom: none;
    background: $bg;
    font-family: $font-default;
    font-size: 14px;
    color: $color;
}

h2 {
    padding: 0;
    margin: 0 0 10px;
    font-size: 26px;
    font-family: $font-caption;
    font-style: italic;
    color: $color;
}

a {
    //text-decoration: none;

    &, &:link {
        color: $link
    }

    &:visited {
        color: $link;
    }

    &:hover {
        color: $link-hover;
    }
}

// =====================================

.head {
    position: relative;
    padding: 10px 0 20px;

    &__name {
        font-size: 58px;
        font-family: $font-caption;
        color: $color-logo;
    }

    &__guitars {
        margin-top: -10px;
        font-size: 20px;
        text-transform: lowercase;
        font-family: $font-caption;
        color: $color-logo2;
    }

    &__langs {
        position: absolute;
        top: 20px;
        right: 0;
    }
}

.langs {
    &__lang {
        display: inline-block;
        padding: 4px 6px;
        text-transform: uppercase;
        text-decoration: none;
        font-size: 14px;

        &,
        &:link,
        &:visited {
            color: $nav-link;
        }

        &:hover {
            background: $bg-hover;
            color: $color-inverted;
        }

        &_current {
            color: $color-light;

            &:hover {
                background: inherit;
                color: @color;
            }
        }
    }
}

.nav {
    border-top: 1px solid $border-thin;
    text-align: center;

    &__item {
        display: inline-block;
        margin: 2px;
        padding: 14px;
        text-transform: uppercase;
        text-decoration: none;
        font-size: 14px;
        //transition: background 0.2s ease-out;

        &,
        &:link,
        &:visited {
            color: $nav-link;
        }

        &:hover {
            background: $bg-hover;
            color: $color-inverted;
            //color: $color;
        }

        &_current {
            box-shadow: 0 -4px 0px $nav-selection inset;

            &:hover {
                background: inherit;
                color: inherit;
                cursor: default;
            }
        }
    }
}

.stripe {
    height: 100px;
    margin-bottom: 40px;
    background-image: url(/img/stripes/1.jpg);
    background-repeat: no-repeat;
    background-position: center center;
    -webkit-background-size: cover;
    background-size: cover;

    &_index {
        background-image: url(/img/stripes/5.jpg);
    }

    &_models {
        background-image: url(/img/stripes/4.jpg);
    }

    &_gallery {
        background-image: url(/img/stripes/2.jpg);
    }

    &_media {
        background-image: url(/img/stripes/6.jpg);
    }

    &_testimonials {
        background-image: url(/img/stripes/1.jpg);
    }

    &_contact {
        background-image: url(/img/stripes/3.jpg);
    }
}

.text {
    line-height: 1.4;
    color: $text;
}

// =====================================

.page-index {
    clearfix();

    &__photo {
        float: left;
        width: 400px;
    }

    &__content {
        margin-left: 420px;
    }
}

.page-models {
    &__model {
        clearfix();
        margin-bottom: 2em;
    }

    &__text {

    }

    &__photos {
        float: right;
        width: 300px;
        margin-left: 20px;
    }

    &__photo {
        display: inline-block;

        img {
            display: inline-block;
            border: none;
            vertical-align: middle;
            width: auto;
            height: 135px;
        }

        &_main {
            margin-bottom: 7px;

            img {
                width: 300px;
                height: auto;
            }
        }

        &:last-child {
            margin-left: 7px;
        }
    }

    &__model-photos {
        margin-top: 1.5em;
        clearfix();
    }

    &__model-photo {
        display: inline-block;
        margin-right: 7px;
    }
}

.page-gallery {
    &__image {
        display: inline-block;
        margin: 0 5px 5px 0;

        img {
            border: none;
            height: 150px;
            vertical-align: middle;
        }
    }
}

.page-media {
    &__title {
        margin: 0.5em 0 2.5em;
    }
}

.page-contact {
    &__link {
        line-height: 28px;
    }

    &__icon {
        display: inline-block;
        width: 24px;
        height: 24px;
        margin-right: 5px;
        margin-top: -4px;
        background-position: center center;
        vertical-align: middle;

        &_vk {
            background-image: url(/img/icons/vk.png);
        }

        &_fb {
            background-image: url(/img/icons/fb.png);
        }
    }
}

@import "lightbox/css/lightbox.css";
